{
  "kind":"Deployment",
  "apiVersion":"apps/v1",
  "metadata":{
     "name":"capstone-app",
     "labels":{
        "app":"capstone-app"
     }
  },
  "spec":{
     "replicas":2,
     "selector":{
        "matchLabels":{
           "app":"capstone-app",
           "version":"2.0"
        }
     },
     "template":{
        "metadata":{
           "labels":{
              "app":"capstone-app",
              "version":"2.0"
           }
        },
        "spec":{
           "containers":[
              {
                 "name":"capstone-app",
                 "image":"twdockeruser/capstone-app:2.0",
                 "ports":[
                    {
                       "name":"http-server",
                       "containerPort":80
                    }
                 ]
              }
           ]
        }
     }
  }
}